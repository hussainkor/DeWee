@model DataTable
@using System.Data
@{
}

<div class="table-responsive">
    <table class="table table-bordered table-hover dt-responsive display tbl small" id="tbl" width="100%">
        <thead>
            <tr>
                <th>Action</th>
                <th>Name of Owner</th>
                <th>Type Of Enterprises</th>
                <th>Type of Enterprise Other</th>
                <th>Primary Mobile No</th>
                <th>District Name</th>
                <th>Block Name</th>
                <th>Address</th>
                <th>Reported On</th>
                <th>Created By </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Rows.Count > 0)
            {
                foreach (DataRow row in Model.Rows)
                {
                    <tr>
                        @if (!string.IsNullOrWhiteSpace(row["BReferralId"].ToString()) && row["BReferralId"].ToString() == "0")
                        {
                            <td><a href="~/Beneficiary/AddBeneficiary?RId=@row["ReferralId_pk"]" class="btn btn-primary small"><i class="fa fa-plus"></i> Add Beneficiary</a></td>
                        }
                        else
                        {

                            <td><button class="modal-btn btn mb-1 btn-rounded btn-success text-w btn-sm" data-id="@row["BReferralId"]"><i class="fa fa-street-view"></i>Beneficiary Details</button></td>
                            @*<td><a href="javascript:void();" data-id="@row["BReferralId"]" class="modal-btn btn mb-1 btn-rounded btn btn-success small text-white"><i class="fa fa-street-view"></i>Beneficiary Details</a></td>*@
                        }
                        <td>@row["NameofOwner"]</td>
                        <td>@row["BusinessTypeInEng"]</td>
                        <td>@row["Other_TypeofEnterprise"]</td>
                        <td>@row["PrimaryMobileNo"]</td>
                        <td>@row["DistrictName"]</td>
                        <td>@row["BlockName"]</td>
                        <td>@row["Address"]</td>
                        <td>@row["ReportedOn"]</td>
                        <td>@row["ReportedBy"]</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No data available</td>
                </tr>
            }
        </tbody>
    </table>
</div>
