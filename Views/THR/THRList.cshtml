        function LoadData() {
            $('#participantTableContainer').empty(); $('#div-download').empty();
            var sid = $('#StateId').val() == "" ? "0" : $('#StateId').val()
            var did = $('#DistrictId').val() == "" ? "0" : $('#DistrictId').val()
            var bid = $('#BlockId').val() == "" ? "0" : $('#BlockId').val()
            $.ajax({
                type: "GET",
                url: document.baseURI + "/THR/GetTHRList/",
                //dataType: 'json',
                data: { SId: sid, DId: did, BId: bid },
                success: function (resp) {
                    if (resp.IsSuccess) {
                        $('#participantTableContainer').html(resp.Data);
                        DataTableSet("tbl", "THR Details List", "THR List " + '@DateTime.Now.ToDateTimeDDMMYYYY()',"div-download");
                    } else {
                        $('#participantTableContainer').html('<h4 class="text-danger">Record Not Found!!<h4>');
                        toastr.error("Error", resp.Data);
                    }
                },
                error: function (req, error) {
                    var errormsg = 'There was a communication error: ' + (error === 'error' ? req.statusText : error);
                    toastr.error("Error", errormsg);
                }
            });
        }
    </script>
    
